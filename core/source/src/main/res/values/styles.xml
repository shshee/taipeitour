<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullWidthWrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullWidthHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapWidthHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextAppearance" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/H3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Bold.H2">
        <item name="android:textSize">@dimen/H2</item>
    </style>

    <style name="TextAppearance.H4">
        <item name="android:textSize">@dimen/H4</item>
    </style>
</resources>